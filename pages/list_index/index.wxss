@import '../../css/main.wxss';
page{
  width: 100%;
  height: 100%;
}
.header{
  position: relative;
  z-index: 2;
}
.search{
  height: 60rpx;
  background: #fff;
  background: rgba(255, 255,255,1);
  border-radius: 40rpx;
}
.text_b{
  color: #999;
  border:1px solid #e5e5e5;
  border-radius: 10rpx;
  padding: 4rpx 20rpx;
  margin-right: 20rpx;
}
.sort_item::after{
  display: block;
  content:'';
  width:0;
  height:0;
  border-width:14rpx;
  border-style:solid;
  border-color:#ccc transparent transparent transparent;
  margin-top:20rpx;
  margin-left:20rpx;
}
.sort_item.active{
  color: #a0c2f0;
}
.sort_item.active::after{
  border-color:#a0c2f0 transparent transparent transparent;
}
.type_list{
  position: absolute;
  left: 0;
  top: calc(100rpx + 1px);
  width: 100%;
  max-height: 450rpx;
  overflow-y: scroll;
}
.type_list .type + .type{
  border-top: 1px solid #e5e5e5;
}
.sort{
  z-index: 2;
}