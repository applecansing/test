@import '../../css/main.wxss';

.classify {
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 2;
}

.container {
  padding-bottom: 90rpx;
}

.classify_item {
  display: flex;
  justify-content: center;
  align-items: center;
}

.classify_item.active text {
  display: block;
  width: 176rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #91b1db;
  border-radius: 40rpx;
}

.name {
  width: 150rpx;
}

.triangle {
  width: 0;
  height: 0;
  border-width: 14rpx;
  border-style: solid;
  border-color: #ccc transparent transparent transparent;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.pic_wrap {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  margin-right: 14rpx;
  overflow: hidden;
  float: left;
}
.pic_wrap .delete{
  position: absolute;
  right: 0;
  top: 0;
  background: rgba(0,0,0,.5);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

image.pic {
  width: 100%;
  height: 100%;
}

.text {
  height: 290rpx;
}

.footer {
  position: fixed;
  width: 100%;
  bottom: 0;
}

.map {
  width: 240rpx;
  height: 64rpx;
  border-radius: 40rpx;
}
